<body>



<%# include("partial/menu")%>



<div class="container mt-3">
        <div class="container table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
						<h2>SISTEMA DE CONFIRMACION</b></h2>
					</div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>PRODUCTO</th>
                        <th>IMG</th>
						<th>CANTIDAD</th>
                        <th>PRECIO</th>
                        <th>TOTAL A PAGAR</th>
                        <th>TEL. COMPRADOR</th>
                        <th>TEL. VENDEDOR</th>
                        <th>DIR. PAQUETE</th>
                        <th>DIR. ENTREGA</th>
                        <th>ESTADO</th>

                    </tr>
                </thead>
                <tbody>

                	<% for (var i = 0; i < query.length; i++) { %>
                		
                    <tr>
						<td><%= query[i].product["product_name"]%></td>
						<td>
							<img src="/public/products/<%= query[i].product.images[0]%>" class="img-fluid">
						</td>
                        <td><%= query[i].quantity %></td>
                        <td><%= query[i].product["product_price"] %></td>
						<td><%= query[i].product["product_price"] * query[i].quantity %></td>
                        <td><%= query[i].user["phone"] %></td>
                        <td>(171) 555-2222</td>
                        <td><%=  query[i].user["street_name"] +" - "+ query[i].user["house_number"] %></td>
                        <td><%=  query[i].user["street_name"] +" - "+ query[i].user["house_number"] %></td>
                        
	                        <td>
	                    <form action="/update/status?id=<%= query[i].id %>" method="POST">
	                    	
	                        	<select class="form-control" name="status">                    
	                        		<option value="<%=  query[i].status %>"><%=  query[i].status %></option>
	                        		<option value="confirmado">confirmado</option>
	                        	</select>

	                        <button type="submit" class="btn btn-primary">Actualizar</button>
	                    </form>    
	                        </td>
	                        
                    </tr>
                    				
                	<% } %>
					
                </tbody>
            </table>
			
        </div>
    </div>
	<!-- Delete Modal HTML -->
</body>
</html>